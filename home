<script>
    $(document).ready(function(e){
        // init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var prop_details = getPropertyDetails();
        renderPropertyPhone('#prop_phone_container', '#prop_phone_template', prop_details);
        renderPropertyPhone('#mobile_prop_phone_container', '#mobile_prop_phone_template', prop_details);
        
        renderHomeHours();
        renderMobileHomeHours();

        var hours = getPropertyHours();
        renderHours('#hours_container','#hours_template', hours, 'reg_hours');
        renderHours('#mobile_hours_container','#mobile_hours_template', hours, 'reg_hours');
        
        var banners = getBanners();
        renderBanner('#banner_template','#home_banner',banners);
        var feature_items = getFeatureList().slice(0,3);
        renderFeatureItems('#feature_container','#feature_template', feature_items);
        
        $('.flexslider').flexslider({
            animation: "fade",
        });
    }
    
    function renderPropertyPhone(container, template, collection){
        var item_list = [];
        var item_rendered = [];
        var template_html = $(template).html();
        Mustache.parse(template_html); 
        
        var repo_rendered = Mustache.render(template_html, collection);
        item_rendered.push(repo_rendered);

        $(container).html(item_rendered.join(''));
    }
    
</script>