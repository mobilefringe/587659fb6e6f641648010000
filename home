<script>
    $(document).ready(function(e){
        // init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        // var todays_hours = getTodaysHours();
        // console.log(todays_hours);
        // renderHomeHours('#home_hours_container', '#home_hours_template', todays_hours);
        renderHomeHours();
        var hours = getPropertyHours();
        renderHours('#hours_container','#hours_template', hours, 'reg_hours');
        var banners = getBanners();
        renderBanner('#banner_template','#home_banner',banners);
        var feature_items = getFeatureList();
        renderFeatureItems('#feature_container','#feature_template', feature_items);
        
        $('.flexslider').flexslider({
            animation: "fade",
        });
    }
</script>