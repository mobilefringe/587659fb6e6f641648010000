<div class="container-fluid">
	<div class="row-fluid" id="special">
		<div class="col-md-9 content_space">	
    		<h1 id="pagetitle"></h1>
    		<div id="page_body"></div>
        </div>
    
        
    </div>
</div>
<script>
    $(document).ready(function(e){
        // init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        prefix = get_prefix();
        $('#top_banner').addClass(slug);
        var pages_json = prefix + "/pages/" + slug + ".json"
        console.log(pages_json);
        $.getJSON(pages_json).done(function(data) {
            $('#page_title').html(data.title);
            $('#page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
                $("#404_msg").fadeIn("fast");
            }
        }); 
    }
</script>