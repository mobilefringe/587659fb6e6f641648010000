<script>
    $(document).ready(function(e){
        // init(e);
        todaysHours();
        loadMallDataCached(renderPage);
    })
    // drop-down-row-today
    function renderPage(){
        var hours = getPropertyHours();
        // console.log(hours);
        renderHours('#hours_container','#hours_template', hours, 'reg_hours');
        renderHours('#holiday_container','#holiday_template', hours, 'holiday_hours'); 
        
        renderHours('#hours_menu_container','#hours_menu_template', hours, 'reg_hours');
        var feature_items = getFeatureList().slice(0,3);
        renderFeatureItems('#feature_container','#feature_template', feature_items);
    }
    function todaysHours() {
        var today = getTodaysHours().day_of_week;
        console.log(today);
        var hours_list = getPropertyHours();
        console.log(hours_list);
        if(today === hours_list.day_of_week ){
            console.log("yay");
        }
        
    }
</script>